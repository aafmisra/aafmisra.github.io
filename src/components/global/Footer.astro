---
const currentPage = Astro.url.pathname;

const className = currentPage === "/" ? "home" : "";
---

<footer class={className}>
  <div id="inner-footer">
    <p>
      Made with &hearts; by Asha Misra Â©2025
    </p>
  
    <nav aria-label="Find me elsewhere.">
      <ul>
        <li>
          <a href="https://www.linkedin.com/in/asha-misra/" target="_blank"
            >LinkedIn</a
          >
        </li>
  
        <li>
          <a href="https://github.com/aafmisra" target="_blank">GitHub</a>
        </li>
  
        <li>
          <a href="/Asha_Misra-resume.pdf" target="_blank" aria-label="Download my resume."
            >Resume</a
          >
        </li>

        <li>
          <a href="/Asha_Misra-resume_print.pdf" target="_blank" aria-label="Download the printer-friendly version of my resume."
            >Resume (less cute, more printable)</a
          >
        </li>
      </ul>
    </nav>
  </div>
</footer>

<style>
  footer {
    width: 100%;
    padding: 1rem 2rem;
    font-size: var(--px-to-rem-16);
    border-top: 6px dotted var(--highlight-color-);
  }

  footer > div#inner-footer {
    display: flex;
    justify-content: space-between;
    max-width: 1600px;
    margin: 0 auto;
  }
  
  footer.home {
    border-top-color: var(--main-color-);
  }

  p {
    color: var(--main-color-);
    margin: 0;
  }

  li {
    max-width: 12ch;
    word-break: break-word;
    text-align: right;
  }

  /* Mobile mode */
  @media (max-width:769px) {
    footer {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    footer > div#inner-footer {
      flex-direction: column;
      gap: 1rem;
    }

    ul {
      padding-inline-start: unset;
      display: flex;
      flex-direction: column;
      gap: .75rem;
    }

    li {
      max-width: unset;
      text-align: center;
    }

    p {
      margin: 0 auto;
    }
  }
</style>