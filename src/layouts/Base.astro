---
//
// Imports
//

// Components
import Header from "../components/global/Header.astro";
import Footer from "../components/global/Footer.astro";
import ScrollToTopLink from "../components/global/ScrollToTopLink/ScrollToTopLink.jsx"

// CSS
import "../styles/global.css";
import "../styles/sizes.css";

const { className = "", title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title ? `${title} | Asha Misra` : "Asha Misra"}</title>
		
		<meta property="og:title" content={title ? `${title} | Asha Misra` : "Asha Misra"} />
    <meta property="og:image" content="/me-crop.webp" />
    <meta property="og:description" content="Hi! I'm Asha - an accessibility-focused front end developer." />

		<!-- fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DynaPuff:wght@400..700&family=Sono:wght@200..800&family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header/>

		<main id="main-content" class={className}>
			<slot />
			<ScrollToTopLink client:load />
		</main>

		<Footer/>

		<script src="../scripts/colors.js"/>
	</body>
</html>
